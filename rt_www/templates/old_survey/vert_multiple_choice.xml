<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<div id="preview_question">
	<p class="question">{{ question }}</p>
	<ol>
	{% for choice in choices %}
		<li>
			<input type="checkbox" name="choice{{ choice.position }}" value=""/><span style="padding-left: .5em">{{ choice.choice }}</span>
			{% if choice.has_comment %}
			<textarea columns="30" rows="3" name="choice_comment" value=""></textarea>
			{% endif %}
		</li>
	{% endfor %}
	</ol>
</div>
</html>
